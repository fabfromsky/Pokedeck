<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pokedeck.imie.pokedeck.activity.PokedeckActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.pokedeck.imie.pokedeck.util.HorizontalListView
            android:id="@+id/pokedeck_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/pokedeck_pokemon_infos"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#a01e338d"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

        <TableLayout
            android:id="@+id/pokedeck_pokemon_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="0.17">

            <TableRow
                android:id="@+id/pokedeck_row_pokemonName">
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="New Text"
                    android:id="@+id/pokedeck_pokemonName"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"/>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_column="1"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    android:layout_gravity="right">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:id="@+id/pokedeck_pokemon_type2"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:id="@+id/pokedeck_pokemon_type1"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>


            </TableRow>

            <TableRow
                android:id="@+id/pokedeck_row_pokemonPv">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="PV :"
                    android:id="@+id/pokedeck_pvLabel"
                    android:layout_below="@+id/pokedeck_pokemonName"
                    android:layout_alignLeft="@+id/pokedeck_pokemonName"
                    android:layout_alignStart="@+id/pokedeck_pokemonName"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="New Text"
                    android:id="@+id/pokedeck_pokePv"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/pokedeck_pokemonName"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    android:layout_toLeftOf="@+id/pokedeck_pokeAtqSpe"
                    android:gravity="right"
                    android:layout_gravity="right" />
            </TableRow>

            <TableRow
                android:id="@+id/pokedeck_row_pokemonAtk">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Atq. :"
                    android:id="@+id/pokedeck_atkLabel"
                    android:layout_below="@+id/pokedeck_pvLabel"
                    android:layout_alignLeft="@+id/pokedeck_pvLabel"
                    android:layout_alignStart="@+id/pokedeck_pvLabel"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="New Text"
                    android:id="@+id/pokedeck_pokeAtq"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/pokedeck_pokePv"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:layout_gravity="right" />
            </TableRow>

            <TableRow
                android:id="@+id/pokedeck_row_pokemonAtkSpe">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Atq. Spe :"
                    android:id="@+id/pokedeck_atqSpeLabel"
                    android:layout_below="@+id/pokedeck_atkLabel"
                    android:layout_alignLeft="@+id/pokedeck_atkLabel"
                    android:layout_alignStart="@+id/pokedeck_atkLabel"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="New Text"
                    android:id="@+id/pokedeck_pokeAtqSpe"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/pokedeck_pokeAtq"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    android:layout_toLeftOf="@+id/pokedeck_pokePv"
                    android:gravity="right"
                    android:layout_gravity="right" />
            </TableRow>

            <TableRow
                android:id="@+id/pokedeck_row_pokemonDef">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Def. :"
                    android:id="@+id/pokedeck_defLabel"
                    android:layout_below="@+id/pokedeck_atqSpeLabel"
                    android:layout_alignLeft="@+id/pokedeck_atqSpeLabel"
                    android:layout_alignStart="@+id/pokedeck_atqSpeLabel"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="New Text"
                    android:id="@+id/pokedeck_pokeDef"
                    android:textColor="#ffffff"
                    android:layout_above="@+id/pokedeck_defSpeLabel"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    android:layout_toLeftOf="@+id/pokedeck_pokeAtqSpe"
                    android:gravity="right"
                    android:layout_gravity="right" />
            </TableRow>

            <TableRow
                android:id="@+id/pokedeck_row_pokemonDefSpe">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Def. Spe :"
                    android:id="@+id/pokedeck_defSpeLabel"
                    android:layout_below="@+id/pokedeck_defLabel"
                    android:layout_alignLeft="@+id/pokedeck_defLabel"
                    android:layout_alignStart="@+id/pokedeck_defLabel"
                    android:textColor="#ffffff"
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="New Text"
                    android:id="@+id/pokedeck_pokeDefSpe"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/pokedeck_pokeDef"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    android:layout_toLeftOf="@+id/pokedeck_pokeDef"
                    android:gravity="right"
                    android:layout_gravity="right" />
            </TableRow>

            <TableRow
                android:id="@+id/pokedeck_row_pokemonSpeed">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Speed :"
                    android:id="@+id/pokedeck_speedLabel"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/pokedeck_defSpeLabel"
                    android:layout_alignLeft="@+id/pokedeck_defSpeLabel"
                    android:layout_alignStart="@+id/pokedeck_defSpeLabel"
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="New Text"
                    android:id="@+id/pokedeck_pokeSpeed"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/pokedeck_pokeDefSpe"
                    android:textIsSelectable="false"
                    android:textSize="11sp"
                    android:layout_toLeftOf="@+id/pokedeck_pokeDefSpe"
                    android:gravity="right"
                    android:layout_gravity="right" />
            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:id="@+id/pokedeck_pokemon_attacks"
            android:layout_width="361dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginLeft="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/pokedeck_pokemon_atk1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:cardCornerRadius="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/pokedeck_pokemon_atk1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="atk name"
                        android:foregroundGravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/pokedeck_pokemon_atk1_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/bug" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pokedeck_pokemon_atk2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:cardCornerRadius="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:layout_alignTop="@+id/pokedeck_pokemon_atk1"
                android:layout_toRightOf="@+id/pokedeck_pokemon_atk1"
                android:layout_toEndOf="@+id/pokedeck_pokemon_atk1"
                android:layout_marginLeft="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/pokedeck_pokemon_atk2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="atk name"
                        android:foregroundGravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/pokedeck_pokemon_atk2_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/bug" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pokedeck_pokemon_atk3"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:cardCornerRadius="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/pokedeck_pokemon_atk1"
                android:layout_alignStart="@+id/pokedeck_pokemon_atk1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/pokedeck_pokemon_atk3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="atk name"
                        android:foregroundGravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/pokedeck_pokemon_atk3_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/bug" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/pokedeck_pokemon_atk4"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:cardCornerRadius="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:layout_alignTop="@+id/pokedeck_pokemon_atk3"
                android:layout_alignLeft="@+id/pokedeck_pokemon_atk2"
                android:layout_alignStart="@+id/pokedeck_pokemon_atk2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/pokedeck_pokemon_atk4_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="atk name"
                        android:foregroundGravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:id="@+id/pokedeck_pokemon_atk4_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/bug" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>



        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
